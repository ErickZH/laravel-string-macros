{
    "name": "victoryoalli/laravel-string-macros",
    "description": "A set of useful Laravel string macros",
    "keywords": [
        "victoryoalli",
        "laravel-string-macros"
    ],
    "homepage": "https://github.com/victoryoalli/laravel-string-macros",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Victor Yoalli",
            "email": "victoryoalli@gmail.com",
            "homepage": "https://victoryoalli.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "VictorYoalli\\StringMacros\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VictorYoalli\\StringMacros\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "VictorYoalli\\StringMacros\\StringMacrosServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
